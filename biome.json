{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all"
		}
	},
	"formatter": {
		"ignore": ["out", "dist"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			}
		},
		"ignore": [".vscode", "out", "dist"]
	}
}
